@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication

<nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #6677F7;">
    <a class="navbar-brand" href="/">FoodHub</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarText">
        <ul class="navbar-nav mr-auto">
            <AuthorizeView>
                <Authorized>
                <li class="nav-item">
                <a class="nav-link" href="/identity/account/logout">Log out @context.User.Identity.Name</a>
                </li>
                </Authorized>
                <NotAuthorized>
                <li class="nav-item">
                <a class="nav-link" href="FetchDAta">Login</a>
                </li>
                </NotAuthorized>
            </AuthorizeView>
            
        </ul>
        <form class="form-inline">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
    </div>
</nav>
